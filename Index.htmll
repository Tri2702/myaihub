body {
  font-family: 'Poppins', sans-serif;
  background-color: #f8f9fa;
  color: #212529;
  scroll-behavior: smooth;
}

.hero {
  height: 100vh;
  background: linear-gradient(to right, rgba(0, 0, 50, 0.8), rgba(0, 80, 150, 0.8)),
    url('https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=1600&q=60') center/cover no-repeat;
}

.hero h1, .hero p { text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5); }

.btn-light {
  border-radius: 30px;
  font-weight: 500;
  transition: 0.3s;
}

.btn-light:hover {
  background: #00bfff;
  color: white;
  transform: scale(1.05);
}

.features h4 {
  color: #004080;
  font-weight: 600;
  margin-bottom: 10px;
}

footer {
  font-size: 0.9rem;
}

body { opacity: 0; transition: opacity 0.6s ease-in; }
body.loaded { opacity: 1; }
.products h2 {
  color: #0b69ff;
  letter-spacing: 0.5px;
}

.card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 15px 30px rgba(0,0,0,0.08);
}

